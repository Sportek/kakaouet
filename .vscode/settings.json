{
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit",
        "source.fixAll.eslint": "explicit"
    },
    "html.format.indentInnerHtml": true,
    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": false,
    "eslint.workingDirectories": ["./client", "./server"],
    "eslint.probe": ["javascript", "typescript", "html", "vue", "markdown"],
    "eslint.validate": ["javascript", "typescript", "html", "vue", "markdown"],
    "cSpell.words": [
        "Créer",
        "Durée",
        "initialise",
        "Liste",
        "validé"
    ],
    "livePreview.defaultPreviewPath": "/client/coverage/client/src/app/services/quiz/question.service.ts.html"
}
